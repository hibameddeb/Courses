{% extends 'base.html.twig' %}

{% block title %}Course Details - {{ course.title }}{% endblock %}

{% block body %}
<div class="bg-gradient-to-b from-indigo-50 via-white to-blue-50 min-h-screen py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Course Header -->
    <div class="bg-gradient-to-r from-indigo-600 to-blue-700 rounded-t-2xl shadow-xl overflow-hidden">
      <div class="relative">
        <div class="absolute inset-0 bg-black opacity-20"></div>
        <div class="relative z-10 py-8 px-8">
          <div class="flex items-center space-x-2 mb-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Learning Path
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              Certified
            </span>
          </div>
          
          <h1 class="text-3xl md:text-4xl font-extrabold text-white mb-2 tracking-tight">{{ course.title }}</h1>
          
          <div class="flex flex-wrap items-center mt-4 text-blue-100 gap-6">
            {% if course.createdAt %}
            <div class="flex items-center">
              <svg class="h-5 w-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
